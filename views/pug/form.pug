doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Formulario
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T", crossorigin="anonymous")
    body 
        div(style="display:flex; justify-content:center; flex-direction:column;")
            h1(style="text-align:center; margin:20px") Formulario
            form(action='/productos', method='POST')
                div(class="d-flex flex-column align-items-center") 
                    input(type='text', name='name', value='', placeholder="Nombre", class="form-control", style="width: 50%; margin:10px auto; padding:5px")
                    input(type='number', name='price', value='', placeholder="Precio", class="form-control", style="width: 50%; margin:10px auto; padding:5px")
                    input(type='text', name='image', value='', placeholder="url", class="form-control", style="width: 50%; margin:10px auto; padding:5px")
                    input(type='submit',style="margin:10px;", class="btn btn-primary", value='Ingresar Producto')